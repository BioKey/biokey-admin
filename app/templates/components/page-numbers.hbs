<div class="pagination-centered">
  <nav aria-label="Pagination">
  <ul class="pagination justify-content-center">
    {{#if canStepBackward}}
      <li class="page-item prev enabled-arrow">
        <a href="#" class="page-link" {{action "incrementPage" -1}}>&laquo;</a>
      </li>
    {{else}}
      <li class="arrow page-item prev disabled">
        <a href="#" class="page-link" {{action "incrementPage" -1}}>&laquo;</a>
      </li>
    {{/if}}

    {{#each pages as |page|}}
      {{#if page.dots}}
        <li class="page-item dots disabled">
          <span>...</span>
        </li>
      {{/if}}
      {{#if page.current}}
        <li class="active page-item page-number">
          <a class="page-link">{{page.num}}</a>
        </li>
      {{else}}
        <li class="page-item page-number">
          <a href="#" class="page-link" {{action "pageClicked" page.num}}>{{page.num}}</a>
        </li>
      {{/if}}
    {{/each}}

    {{#if canStepForward}}
      <li class="arrow page-item next enabled-arrow">
        <a href="#" class="page-link" {{action "incrementPage" 1}}>&raquo;</a>
      </li>
    {{else}}
      <li class="arrow page-item next disabled">
        <a href="#" class="page-link" {{action "incrementPage" 1}}>&raquo;</a>
      </li>
    {{/if}}
  </ul>
  </nav>
</div>