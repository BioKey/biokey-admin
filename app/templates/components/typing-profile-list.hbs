<form>
  <div class="form-group">
{{input type="text" class="form-control" id="searchField" placeholder="Search typing profiles..." value=query }}
</div>
</form>
<table class="table table-hover">
	<thead>
		<tr>
			<th scope="col">User</th>
			<th scope="col">Machine</th>
			<th width="20" scope="col" class="center-text-table-cell">Online</th>
			<th width="20" scope="col" class="center-text-table-cell">Status</th>
		</tr>
	</thead>
	<tbody>
		{{#each filteredSortedProfiles as |tp|}}
		{{#if tp.user}}
		{{#if tp.machine}}
		{{#unless tp.isDeleted}}
		{{#unless tp.isNew}}
		{{#link-to 'profiles.profile' tp.id tagName="tr" class="clickable-row"}}
		<th scope="row">
			{{#link-to 'users.user' tp.user}}
			{{tp.user.name}}
			{{/link-to}}
		</th>
		<td>
			{{#link-to 'machines.machine' tp.machine}}
			{{tp.machine.mac}}
			{{/link-to}}
		</td>
		<td class="center-text-table-cell">
			{{#if tp.isActive}}
			{{fa-icon "circle" size="lg"}}
			{{else}}
			{{fa-icon "circle-o" size="lg"}}
			{{/if}}
			</td>
		<td class="center-text-table-cell">{{#if tp.isLocked}}{{fa-icon "lock" size="lg"}}{{else}}{{fa-icon "unlock" size="lg"}}{{/if}}</td>
		{{/link-to}}
		{{/unless}}
		{{/unless}}
		{{/if}}
		{{/if}}
		{{/each}}
	</tbody>
</table>
<p>{{fa-icon "circle"}} indicates that the user's typing profile is online.</p>