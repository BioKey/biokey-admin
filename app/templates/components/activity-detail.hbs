<h1>Activity</h1>
<form>
	<div class="form-group">
		<label for="profileField">{{#link-to 'profiles.profile' activity.typingProfile.id}}Typing Profile &rarr;{{/link-to}}</label>
		{{input type="text" class="form-control" readonly="readonly" id="profileField" placeholder="Enter typing profile" value=typingProfileName }}
	</div>

	<div class="form-group">
		<label for="typeField">Activity Type</label>
		{{input type="text" class="form-control" readonly="readonly" id="typeField" placeholder="Enter activity type" value=activity.activityType }}
	</div>

	<div class="form-group">
		<label for="initiatedField">Initiated By</label>
		{{input type="text" class="form-control" readonly="readonly" id="initiatedField" placeholder="Enter initiated by" value=activity.initiatedBy }}
	</div>

	<div class="form-group">
		<label for="timestampField">Timestamp</label>
		{{input type="text" class="form-control" readonly="readonly" id="timestampField" placeholder="Enter timestamp" value=activity.timestamp }}
	</div>
</form>